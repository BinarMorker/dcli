#!/usr/bin/env bash

# Simple script that just runs all of the dcli apps
#
# Created by Mike Chambers
# https://www.mikechambers.com
#
# Released under an MIT License
#
# More info at:
# https://github.com/mikechambers/dcli/

# make sure you place the app in your PATH

echo "------------- RUNNING dclis--------------"
dclis --id mesh --platform xbox

echo "------------- RUNNING dclim--------------"
dclim --manifest-dir ~/tmp/

echo "------------- RUNNING dclic--------------"
dclic --member-id 4611686018429783292 --platform xbox

echo "------------- RUNNING dclims--------------"
dclims --manifest-path ~/tmp/manifest.sqlite3 --hash 3260604718

echo "------------- RUNNING dclia--------------"
dclia --manifest-path ~/tmp/manifest.sqlite3 --member-id 4611686018429783292 --platform xbox

echo "------------- RUNNING dclics--------------"
dclics --member-id 4611686018429783292 --platform xbox --mode all_pvp --character-id 2305843009264966985 --moment 

echo "------------- RUNNING dclitime--------------"
dclitime --moment weekly

echo "------------- RUNNING dcliah --------------"
dcliah --member-id 4611686018429783292 --character-id 2305843009264966985 --platform xbox --manifest-path ~/tmp/manifest.sqlite3 --moment weekend --mode trials_of_osiris